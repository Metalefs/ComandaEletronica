@model Ia_ComandaRestaurante.Models.ViewModels.MenuFormViewModel


@{int i = 0;}

<h1>Anotar novo Pedido</h1>

<h4>Pedido</h4>
<hr />
<div class="table-row">

    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Pedido.IdMesa" class="control-label"></label> - Mesas Disponiveis
                <select asp-for="Pedido.IdMesa" asp-items="@(new SelectList(Model.Mesas,"IdMesa","NumeroDaMesa"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Pedido.IdFuncionario" class="control-label"></label>
                <select asp-for="Pedido.IdFuncionario" asp-items="@(new SelectList(Model.Funcionarios,"IdFuncionario","NomeDoFuncionario"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Pedido.IdMenu" class="control-label"></label>
                <select asp-for="Pedido.IdMenu" asp-items="@(new SelectList(Model.Menus,"IdMenu","Nome"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar aos pedidos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
