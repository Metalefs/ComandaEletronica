@model IEnumerable<Ia_ComandaRestaurante.Models.ViewModels.Menu>

@{
        ViewData["Title"] = "Cardápio";
}

<h1>Cardápio</h1>

<p>
    <a asp-action="Create">Adicionar Mais</a>
</p>
<table class="table">
    <thead class="table table-success ">
        <tr class="table table-success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                Imagem
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    R$  @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <img alt="@Html.DisplayFor(model =>item.Descricao)" width="50" height="50" class="Myfigure-img" src="@Html.DisplayFor(model =>item.Img)" runat="server" />
                </td>



                <td>



                    <a asp-action="Edit" asp-route-id="@item.IdMenu">Editar</a> |



                    <a asp-action="Details" asp-route-id="@item.IdMenu">Detalhes</a> |



                    <a asp-action="Delete" asp-route-id="@item.IdMenu">Deletar</a>



                </td>



            </tr>
        }
    </tbody>
</table>
