@model Ia_ComandaRestaurante.Models.ViewModels.Mesa

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Mesa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMesa" />
            <div class="form-group">
                <label asp-for="NomeDoCliente" class="control-label"></label>
                <input asp-for="NomeDoCliente" class="form-control" />
                <span asp-validation-for="NomeDoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroDaMesa" class="control-label"></label>
                <input asp-for="NumeroDaMesa" class="form-control" />
                <span asp-validation-for="NumeroDaMesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeDePessoas" class="control-label"></label>
                <input asp-for="QuantidadeDePessoas" class="form-control" />
                <span asp-validation-for="QuantidadeDePessoas" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponibilidade" /> @Html.DisplayNameFor(model => model.Disponibilidade)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
